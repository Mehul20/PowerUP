<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="1200.0" xmlns:fx="http://javafx.com/javafx" fx:controller="com.example.towerdefense.WelcomeController" styleClass="welcomeBox">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Text layoutX="10" layoutY="30" text="Tower Defense" stroke="black" strokeWidth="3" fill="#0f5e24" styleClass="welcomeTitle">
        <font>
            <Font size="155.0" />
        </font>
    </Text>
    <Text layoutX="10" layoutY="30" stroke="BLACK" text="Powered by Team OLogN">
        <font>
            <Font size="27.0" />
        </font>
        <VBox.margin>
            <Insets bottom="65.0" top="5.0" />
        </VBox.margin>
    </Text>
    <Button fx:id="startButton" alignment="CENTER" onAction="#onWelcomeButtonClick" text="Start Game!" styleClass="welcomeButton">
        <font>
            <Font size="24.0" />
        </font>
    </Button>
</VBox>
