<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.towerdefense.GameOverController">
   <children>
      <VBox alignment="CENTER" prefHeight="600.0" prefWidth="1200.0" spacing="25.0" styleClass="startBox">
         <children>
            <Label fx:id="playerLabel" alignment="CENTER" prefHeight="65.0" prefWidth="868.0" textFill="#f8f4f4">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Button mnemonicParsing="false" onAction="#onRestartButtonClick" prefHeight="45.0" prefWidth="135.0" styleClass="customButton" text="Restart">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#onExitButtonClick" prefHeight="45.0" prefWidth="136.0" styleClass="customButton" text="Exit">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
