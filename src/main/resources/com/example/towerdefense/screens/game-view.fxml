<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.towerdefense.controllers.GameController">
    <VBox fx:id="container">
        <Pane fx:id="grid" />
    </VBox>
    <VBox fx:id="sideMenu" prefHeight="600.0" prefWidth="300.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
        <Label text="Player Name">
            <font>
                <Font name="System Bold" size="26.0" />
            </font>
            <padding>
                <Insets bottom="15.0" />
            </padding>
        </Label>
        <HBox prefHeight="30.0" prefWidth="260.0">
            <HBox prefHeight="30.0" prefWidth="130.0">
                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="/difficulty.png"/>
                </ImageView>
                <Label prefHeight="30.0" prefWidth="90.0" text="Easy">
                    <font>
                        <Font size="20.0"/>
                    </font>
                    <padding>
                        <Insets left="7.0" />
                    </padding>
                </Label>
                <padding>
                    <Insets bottom="10.0" />
                </padding>
            </HBox>
            <HBox layoutX="10.0" layoutY="10.0" prefHeight="30.0" prefWidth="130.0">
                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="/clock.png"/>
                </ImageView>
                <Label fx:id="timer" prefHeight="30.0" prefWidth="90.0" text="3:00">
                    <font>
                        <Font size="20.0"/>
                    </font>
                    <padding>
                        <Insets left="7.0" />
                    </padding>
                </Label>
            </HBox>
        </HBox>
        <HBox layoutX="30.0" layoutY="83.0" prefHeight="30.0" prefWidth="260.0">
            <HBox prefHeight="30.0" prefWidth="130.0">
                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="/coin.png"/>
                </ImageView>
                <Label prefHeight="30.0" prefWidth="90.0" text="500">
                    <font>
                        <Font size="20.0"/>
                    </font>
                    <padding>
                        <Insets left="7.0" />
                    </padding>
                </Label>
            </HBox>
            <HBox layoutX="10.0" layoutY="10.0" prefHeight="30.0" prefWidth="130.0">
                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="/kills.png"/>
                </ImageView>
                <Label prefHeight="30.0" prefWidth="90.0" text="0">
                    <font>
                        <Font size="20.0"/>
                    </font>
                    <padding>
                        <Insets left="7.0" />
                    </padding>
                </Label>
            </HBox>
        </HBox>
        <ScrollPane prefHeight="420.0" prefWidth="260.0" hbarPolicy="NEVER">
            <VBox.margin>
                <Insets top="20.0"/>
            </VBox.margin>
            <GridPane minHeight="0.0" minWidth="0.0" prefWidth="255.0"/>
        </ScrollPane>
    </VBox>
</HBox>
